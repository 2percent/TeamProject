<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context="edu.android.teamproject.DiaryDivideFragment">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="6"-->
        <!--android:fillViewport="true">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border2"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="일기\n도착 날"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_diary_write_receiveday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint="일기를 보여줄 날짜를 선택하세요"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/imagebtn_diary_write_calender"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/calender" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_diary_write_weather"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="@drawable/border2"
                        android:maxLength="6"
                        android:hint="오늘 날씨는요?"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_diary_write_kimozzi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="text"
                        android:hint="기분은 어때요?"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>


            <!--app:srcCompat="@drawable/savepicture"/>-->
                <!--android:layout_weight="5"-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.21">

                <ImageView
                    android:id="@+id/image_diary_write_add_picture"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="6"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/border" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/imagebtn_diary_write_add_picture"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:background="@drawable/addpicture"
                        android:layout_height="match_parent"
                        android:scaleX="0.4"
                        android:scaleY="0.4"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/imagebtn_diary_write_edit_picture"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:scaleY="0.6"
                        android:scaleX="0.6"
                        android:textSize="12dp"
                        android:text="그림을 그려주세요"
                        android:background="@drawable/editpicture"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/border2"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_diary_write_size"
                    android:entries="@array/size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_diary_write_font"
                    android:entries="@array/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_diary_write_color"
                    android:entries="@array/color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"

                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_diary_write_background"
                    android:entries="@array/back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"

                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_diary_write_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4.10"
                android:ems="10"
                android:hint="    여기에 일기를 써보세요"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/border2"
                android:layout_weight="0.6"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imagebtn_temporary_save"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/temporarysave" />

                <ImageButton
                    android:id="@+id/imagebtn_diary_write_sendto"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sendto" />

            </LinearLayout>
        </LinearLayout>

    <!--</ScrollView>-->




</LinearLayout>
