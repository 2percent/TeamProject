<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.android.teamproject.MatchActivity">

    <ImageView
        android:id="@+id/image_match_connect"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/login_second_step" />

    <ImageView
        android:id="@+id/image_match_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        app:srcCompat="@drawable/login_logo" />

    <EditText
        android:id="@+id/edit_match_my_phone"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:inputType="phone"
        android:hint="  나의 연락처"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edit_match_your_phone"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="  너의 연락처"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">


        <TextView
            android:id="@+id/text_match_start_day"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:hint="우리가 시작한 날" />

        <ImageButton
            android:id="@+id/imagebtn_match_calender"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/calender" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/imagebtn_match_link"
        android:onClick=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/link"
        android:layout_marginTop="24dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center"/>


</LinearLayout>
